{
    "manifest_version": 3,
    "name": "Show Me The Color",
    "version": "0.1.0",
    "description": "A simple tool to show the color of your selected color code.",
    "icons": {
        "128": "./icon-128x128.png",
        "48": "./icon-48x48.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "./main.global.js"
            ]
        }
    ],
    "permissions": [
        "activeTab"
    ],
    "action": {
        "default_popup": "./popup.html"
    }
}